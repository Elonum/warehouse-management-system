{
  "name": "InventoryAdjustmentItem",
  "type": "object",
  "properties": {
    "adjustment_id": {
      "type": "string",
      "description": "Reference to InventoryAdjustment"
    },
    "product_id": {
      "type": "string",
      "description": "Reference to Product"
    },
    "product_name": {
      "type": "string",
      "description": "Product name for display"
    },
    "warehouse_id": {
      "type": "string",
      "description": "Reference to Warehouse"
    },
    "receipt_quantity": {
      "type": "number",
      "description": "Receipt quantity (positive adjustment)"
    },
    "writeoff_quantity": {
      "type": "number",
      "description": "Write-off quantity (negative adjustment)"
    },
    "reason": {
      "type": "string",
      "enum": [
        "count_discrepancy",
        "damage",
        "expiry",
        "theft",
        "found",
        "correction",
        "other"
      ],
      "description": "Reason for adjustment"
    },
    "notes": {
      "type": "string",
      "description": "Item notes"
    }
  },
  "required": [
    "adjustment_id",
    "product_id",
    "warehouse_id"
  ]
}