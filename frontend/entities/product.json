{
  "name": "Product",
  "type": "object",
  "properties": {
    "article": {
      "type": "string",
      "description": "Product article/SKU"
    },
    "name": {
      "type": "string",
      "description": "Product name"
    },
    "barcode": {
      "type": "string",
      "description": "Product barcode"
    },
    "unit_weight": {
      "type": "number",
      "description": "Weight per unit in kg"
    },
    "base_unit_cost": {
      "type": "number",
      "description": "Base cost per unit"
    },
    "category": {
      "type": "string",
      "description": "Product category"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "discontinued"
      ],
      "default": "active"
    }
  },
  "required": [
    "article",
    "name"
  ]
}