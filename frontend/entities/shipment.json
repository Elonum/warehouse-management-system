{
  "name": "Shipment",
  "type": "object",
  "properties": {
    "shipment_number": {
      "type": "string",
      "description": "Shipment number"
    },
    "store_id": {
      "type": "string",
      "description": "Reference to Store"
    },
    "store_name": {
      "type": "string",
      "description": "Store name for display"
    },
    "warehouse_id": {
      "type": "string",
      "description": "Reference to Warehouse"
    },
    "warehouse_name": {
      "type": "string",
      "description": "Warehouse name for display"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "pending",
        "shipped",
        "in_transit",
        "delivered",
        "partially_accepted",
        "accepted",
        "cancelled"
      ],
      "default": "draft"
    },
    "shipment_date": {
      "type": "string",
      "format": "date",
      "description": "Shipment date"
    },
    "expected_date": {
      "type": "string",
      "format": "date",
      "description": "Expected delivery date"
    },
    "delivered_date": {
      "type": "string",
      "format": "date",
      "description": "Actual delivery date"
    },
    "logistics_cost": {
      "type": "number",
      "description": "Total logistics cost"
    },
    "total_items": {
      "type": "number",
      "description": "Total items count"
    },
    "sent_quantity": {
      "type": "number",
      "description": "Total sent quantity"
    },
    "accepted_quantity": {
      "type": "number",
      "description": "Total accepted quantity"
    }
  },
  "required": [
    "shipment_number",
    "store_id",
    "warehouse_id"
  ]
}