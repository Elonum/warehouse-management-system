{
  "name": "StockMovement",
  "type": "object",
  "properties": {
    "movement_date": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of movement"
    },
    "movement_type": {
      "type": "string",
      "enum": [
        "incoming",
        "outgoing",
        "adjustment",
        "transfer"
      ],
      "description": "Type of stock movement"
    },
    "source_type": {
      "type": "string",
      "enum": [
        "supplier_order",
        "shipment",
        "inventory",
        "transfer"
      ],
      "description": "Source document type"
    },
    "source_id": {
      "type": "string",
      "description": "Reference to source document"
    },
    "source_number": {
      "type": "string",
      "description": "Source document number for display"
    },
    "product_id": {
      "type": "string",
      "description": "Reference to Product"
    },
    "product_name": {
      "type": "string",
      "description": "Product name for display"
    },
    "warehouse_id": {
      "type": "string",
      "description": "Reference to Warehouse"
    },
    "warehouse_name": {
      "type": "string",
      "description": "Warehouse name for display"
    },
    "quantity": {
      "type": "number",
      "description": "Movement quantity (positive or negative)"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "movement_date",
    "movement_type",
    "product_id",
    "warehouse_id",
    "quantity"
  ]
}