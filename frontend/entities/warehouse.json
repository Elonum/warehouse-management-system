{
  "name": "Warehouse",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Warehouse name"
    },
    "warehouse_type": {
      "type": "string",
      "enum": [
        "main",
        "distribution",
        "transit",
        "returns"
      ],
      "default": "main"
    },
    "location": {
      "type": "string",
      "description": "Physical location/address"
    },
    "capacity": {
      "type": "number",
      "description": "Storage capacity in units"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ],
      "default": "active"
    }
  },
  "required": [
    "name",
    "warehouse_type"
  ]
}